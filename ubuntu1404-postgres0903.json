{
    "push": {
        "name": "kenhkan/ubuntu1404-postgres0903",
        "vcs": true
    },
    "builders": [{
        "boot_command": [
            "<esc><esc><enter><wait>",
            "/install/vmlinuz noapic ",
            "preseed/url=http://{{ .HTTPIP }}:{{ .HTTPPort }}/preseed.cfg ",
            "debian-installer=en_US auto locale=en_US kbd-chooser/method=us ",
            "hostname={{ user `hostname` }} ",
            "fb=false debconf/frontend=noninteractive ",
            "keyboard-configuration/modelcode=SKIP keyboard-configuration/layout=USA ",
            "keyboard-configuration/variant=USA console-setup/ask_detect=false ",
            "passwd/user-fullname={{ user `ssh_fullname` }} ",
            "passwd/user-password={{ user `ssh_password` }} ",
            "passwd/user-password-again={{ user `ssh_password` }} ",
            "passwd/username={{ user `ssh_username` }} ",
            "initrd=/install/initrd.gz -- <enter>"
        ],
        "disk_size": 65536,
        "guest_additions_path": "VBoxGuestAdditions_{{.Version}}.iso",
        "guest_os_type": "Ubuntu_64",
        "headless": "{{ user `headless` }}",
        "http_directory": "http",
        "iso_checksum": "{{ user `iso_checksum` }}",
        "iso_checksum_type": "sha1",
        "iso_urls": [
            "{{ user `iso_path` }}/{{ user `iso_name` }}",
            "{{ user `iso_url` }}"
        ],
        "shutdown_command": "echo '{{ user `ssh_password` }}'|sudo -S shutdown -P now",
        "ssh_password": "{{ user `ssh_password` }}",
        "ssh_username": "{{ user `ssh_username` }}",
        "ssh_wait_timeout": "10000s",
        "type": "virtualbox-iso",
        "vboxmanage": [
            [
                "modifyvm",
                "{{.Name}}",
                "--memory",
                "2048"
            ],
            [
                "modifyvm",
                "{{.Name}}",
                "--cpus",
                "1"
            ]
        ],
        "virtualbox_version_file": ".vbox_version",
        "vm_name": "ubuntu1404"
    }, {
        "type": "digitalocean",
        "api_token": "{{user `digitalocean_token`}}",
        "image": "ubuntu-14-04-x64",
        "region": "nyc3",
        "size": "2gb",
        "snapshot_name": "{{user `atlas_username`}}/{{user `atlas_box_name`}}/{{user `version`}}"
    }],
    "provisioners": [{
        "environment_vars": [
            "CM={{user `cm`}}",
            "CM_VERSION={{user `cm_version`}}",
            "CLEANUP_PAUSE={{user `cleanup_pause`}}",
            "UPDATE={{user `update`}}",
            "INSTALL_VAGRANT_KEY={{user `install_vagrant_key`}}",
            "SSH_USERNAME={{user `ssh_username`}}",
            "SSH_PASSWORD={{user `ssh_password`}}",
            "http_proxy={{user `http_proxy`}}",
            "https_proxy={{user `https_proxy`}}",
            "ftp_proxy={{user `ftp_proxy`}}",
            "rsync_proxy={{user `rsync_proxy`}}",
            "no_proxy={{user `no_proxy`}}"
        ],
        "execute_command": "echo '{{ user `ssh_password` }}' | {{.Vars}} sudo -E -S bash '{{.Path}}'",
        "scripts": [
            "script/update.sh",
            "script/vagrant.sh",
            "script/sshd.sh",
            "script/vmtool.sh",
            "script/minimize.sh",
            "script/cleanup.sh",
            "script/cmtool.sh"
        ],
        "type": "shell"
    }, {
        "scripts": [
            "script/postgres.sh",
            "script/stack.sh"
        ],
        "type": "shell"
    }],
    "post-processors": [
        [{
            "only": ["virtualbox-iso"],
            "type": "vagrant",
            "keep_input_artifact": false,
            "only": ["virtualbox-iso"],
            "output": "box/{{.Provider}}/ubuntu1404-{{user `cm`}}{{user `cm_version`}}-{{user `version`}}.box"
        }, {
            "only": ["virtualbox-iso"],
            "type": "atlas",
            "artifact": "{{user `atlas_username`}}/{{user `atlas_box_name`}}",
            "artifact_type": "vagrant.box",
            "metadata": {
                "provider": "virtualbox",
                "description": "ubuntu-14.04 psql-9.3.8",
                "version": "{{user `version`}}"
            }
        }]
    ],
    "variables": {
        "cleanup_pause": "",
        "cm": "nocm",
        "cm_version": "",
        "custom_script": ".",
        "ftp_proxy": "{{env `ftp_proxy`}}",
        "headless": "",
        "http_proxy": "{{env `http_proxy`}}",
        "https_proxy": "{{env `https_proxy`}}",
        "install_vagrant_key": "true",
        "iso_checksum": "3bfa6eac84d527380d0cc52db9092cde127f161e",
        "iso_name": "ubuntu-14.04.2-server-amd64.iso",
        "iso_path": "iso",
        "iso_url": "http://releases.ubuntu.com/14.04/ubuntu-14.04.2-server-amd64.iso",
        "no_proxy": "{{env `no_proxy`}}",
        "rsync_proxy": "{{env `rsync_proxy`}}",
        "hostname": "vagrant",
        "ssh_fullname": "vagrant",
        "ssh_password": "vagrant",
        "ssh_username": "vagrant",
        "update": "false",
        "atlas_username": "kenhkan",
        "atlas_box_name": "ubuntu1404-postgres0903",
        "atlas_token": "{{env `ATLAS_TOKEN`}}",
        "digitalocean_token": "{{env `DIGITALOCEAN_API_TOKEN`}}",
        "version": "0.0.14"
    }
}
